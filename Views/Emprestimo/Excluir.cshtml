@model EmprestimoModel
@{
    ViewData["title"] = "Excluir Empréstimo";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-light" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-light" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div class="container bg-dark p-4 rounded-5" style="max-width: 600px;">

    <div class="mb-4 text-center">
        <h1 class="text-light">Exclusão Empréstimo</h1>
    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Excluir">
        <input type="hidden" asp-for="Id" />

        <h2 class="text-light">Tem certeza que deseja excluir o registro?</h2>

        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor:</label>
            <input type="text" class="form-control text-light" asp-for="Recebedor" id="Recebedor" placeholder="Quem está recebendo o empréstimo?" disabled>
            <span class="text-danger" asp-validation-for="Recebedor"></span>
        </div>

        <div class="mb-3">
            <label for="BancoFornecedor" class="form-label text-light">Banco Fornecedor:</label>
            <input type="text" class="form-control text-light" asp-for="BancoFornecedor" id="BancoFornecedor" placeholder="Quem está emprestando o dinheiro?" disabled>
            <span class="text-danger" asp-validation-for="BancoFornecedor"></span>
        </div>

        <div class="mb-3">
            <label for="QuantiaEmprestimo" class="form-label text-light">Quantia:</label>
            <input type="text" class="form-control text-light" asp-for="QuantiaEmprestimo" id="Quantia" placeholder="Qual a quantia emprestada?" disabled>
            <span class="text-danger" asp-validation-for="QuantiaEmprestimo"></span>
        </div>

        <div class="d-flex gap-3 mt-4">
            <button type="submit" class="btn btn-danger btn-sm w-50">Excluir</button>
            <a class="btn btn-primary btn-sm w-50" asp-controller="Emprestimo" asp-action="Index">Cancelar</a>
        </div>
    </form>

</div>
